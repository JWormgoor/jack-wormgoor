        const res = await fetch(url);
        if (!res.ok) throw new Error("ISS API failed");
        const data = await res.json();
        return { lat: data.latitude, lon: data.longitude, alt: data.altitude, vel: data.velocity };
      }

      async function reverseGeo(lat, lon) {
        // BigDataCloud reverse geocode (no key)
        const url = `https://api.bigdatacloud.net/data/reverse-geocode-client?latitude=${lat}&longitude=${lon}&localityLanguage=en`;
        const res = await fetch(url);
        if (!res.ok) throw new Error("Reverse geocode failed");
        const data = await res.json();
        return {
          countryName: data.countryName || "",
          countryCode: data.countryCode || "",
          locality: data.locality || data.city || "",
          principal: data.principalSubdivision || "",
        };
      }

      function minutesToHM(mins) {
        const h = Math.floor(mins / 60);
        const m = Math.round(mins % 60);
        return `${h}h ${pad2(m)}m`;
      }

      function applyThemeFromSun(sunrise, sunset) {
        const now = new Date();

        const goldenMinutes = 30;
        const goldenMs = goldenMinutes * 60 * 1000;

        const goldenAfterSunriseStart = sunrise;
        const goldenAfterSunriseEnd = new Date(sunrise.getTime() + goldenMs);

        const goldenBeforeSunsetStart = new Date(sunset.getTime() - goldenMs);
        const goldenBeforeSunsetEnd = sunset;

        const isGolden =
          (now >= goldenAfterSunriseStart && now <= goldenAfterSunriseEnd) ||
          (now >= goldenBeforeSunsetStart && now <= goldenBeforeSunsetEnd);

        const isDay = now >= sunrise && now < sunset;

        let theme;
        if (isGolden) theme = "golden";
        else if (isDay) theme = "light";
        else theme = "dark";

        document.documentElement.dataset.theme = theme;

        const label = theme === "light" ? "Day" : theme === "golden" ? "Golden" : "Night";
        setCard("mode", { value: label, hint: `Golden window: Â±${goldenMinutes} mins` });
      }

      function scheduleNextSwitch(sunrise, sunset) {
        const now = new Date();
        const goldenMinutes = 30;
        const goldenMs = goldenMinutes * 60 * 1000;

        const boundaries = [
          sunrise,
          new Date(sunrise.getTime() + goldenMs),
          new Date(sunset.getTime() - goldenMs),
          sunset,
        ].filter((t) => t.getTime() > now.getTime());

        if (boundaries.length === 0) return;

        boundaries.sort((a, b) => a.getTime() - b.getTime());
        const next = boundaries[0];

        const ms = next.getTime() - now.getTime();
        setTimeout(() => {
          applyThemeFromSun(sunrise, sunset);
          scheduleNextSwitch(sunrise, sunset);
        }, Math.max(5000, ms + 5000));
      }

      async function initEverything() {
        // Fallback location: Salisbury, UK
        const fallback = { lat: 51.0688, lng: -1.7945 };

        const position = await new Promise((resolve) => {
          if (!navigator.geolocation) return resolve(null);
          navigator.geolocation.getCurrentPosition(
            (pos) => resolve(pos),
            () => resolve(null),
            { enableHighAccuracy: false, timeout: 4000, maximumAge: 3600000 }
          );
        });

        const lat = position?.coords?.latitude ?? fallback.lat;
        const lng = position?.coords?.longitude ?? fallback.lng;

        // Sun + theme + daylight
        try {
          setCard("sun", { value: "Loadingâ€¦", hint: "Fetching sunrise/sunsetâ€¦" });

          const { sunrise, sunset } = await fetchSunTimes(lat, lng);

          setCard("sun", {
            value: `${fmtTime(sunrise)} â†‘  ${fmtTime(sunset)} â†“`,
            hint: "Updates daily â€¢ based on your location",
          });

          const daylightMins = (sunset.getTime() - sunrise.getTime()) / (60 * 1000);
          setCard("daylight", {
            value: minutesToHM(daylightMins),
            hint: "Useful for planning chaos",
          });

          applyThemeFromSun(sunrise, sunset);
          scheduleNextSwitch(sunrise, sunset);
        } catch (e) {
          setCard("sun", { value: "Unavailable", hint: "Couldnâ€™t fetch sun times" });
          setCard("daylight", { value: "â€”", hint: "No sun data" });
        }

        // Weather + Rain chance
        try {
          setCard("weather", { value: "Loadingâ€¦", hint: "Fetching local weatherâ€¦" });
          setCard("rain", { value: "Loadingâ€¦", hint: "Looking aheadâ€¦" });

          const w = await fetchWeatherAndRain(lat, lng);

          setCard("weather", {
            value: `${Math.round(w.temp)}Â°C`,
            hint: `Wind ${Math.round(w.wind)} km/h`,
          });

          const chance = (w.rainChance ?? null);
          const mm = (w.rainMm ?? null);

          if (chance === null) {
            setCard("rain", { value: "â€”", hint: "No rain data" });
          } else {
            const mmText = (mm !== null && mm > 0) ? ` â€¢ ~${mm.toFixed(1)}mm` : "";
            setCard("rain", {
              value: `${Math.round(chance)}%`,
              hint: `Next hour${mmText}`,
            });
          }
        } catch (e) {
          setCard("weather", { value: "Unavailable", hint: "Weather fetch failed" });
          setCard("rain", { value: "Unavailable", hint: "Rain fetch failed" });
        }

        // ISS + country/ocean + flag
        try {
          setCard("iss", { value: "Loadingâ€¦", hint: "Fetching ISS positionâ€¦" });

          const iss = await fetchISS();
          let place = "Over ocean";
          let extra = `Lat ${iss.lat.toFixed(2)}, Lon ${iss.lon.toFixed(2)}`;

          try {
            const geo = await reverseGeo(iss.lat, iss.lon);
            if (geo.countryName) {
              const flag = flagFromCode(geo.countryCode);
              place = `Over: ${geo.countryName} ${flag}`.trim();
              const regionBits = [geo.locality, geo.principal].filter(Boolean).join(", ");
              extra = regionBits ? `${regionBits} â€¢ ${extra}` : extra;
            }
          } catch (_) {
            // If reverse geocode fails, we still show coords.
          }

          setCard("iss", { value: place, hint: extra });
        } catch (e) {
          setCard("iss", { value: "Unavailable", hint: "ISS fetch failed" });
        }

        // Refresh every 20 minutes (keeps ISS + rain â€œaliveâ€)
        setTimeout(() => initEverything(), 20 * 60 * 1000);
      }

      initEverything();
    </script>
