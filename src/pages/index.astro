      // ---------- Moon phase (local calc, no API) ----------
      // Returns 0..1 where 0=new, 0.5=full
      function moonPhaseFraction(date = new Date()) {
        // Simple approximation using known new moon reference + synodic month length
        const synodicMonth = 29.530588853; // days
        const knownNewMoon = Date.UTC(2000, 0, 6, 18, 14, 0); // 2000-01-06 18:14 UTC
        const daysSince = (date.getTime() - knownNewMoon) / (1000 * 60 * 60 * 24);
        const phase = (daysSince % synodicMonth) / synodicMonth;
        return (phase + 1) % 1;
      }

      function moonEmojiAndName(frac) {
        // Buckets (8 phases)
