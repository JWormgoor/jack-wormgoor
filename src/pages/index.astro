      // Flag emoji from country code (e.g. "GB" -> ðŸ‡¬ðŸ‡§)
      const flagFromCode = (code) => {
        if (!code || code.length !== 2) return "";
        const A = 0x1f1e6;
        const base = "A".charCodeAt(0);
        const chars = code.toUpperCase().split("").map(c => A + (c.charCodeAt(0) - base));
        return String.fromCodePoint(...chars);
